@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-secondary text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-shield-alt fs-4 me-2"></i>
                        <h4 class="mb-0">@ViewData["Title"]</h4>
                    </div>
                </div>
                <div class="card-body bg-light p-4">
                    <section class="mb-4">
                        <h5 class="fw-bold"><i class="fas fa-info-circle me-2 text-secondary"></i>Introduction</h5>
                        <p>
                            This privacy policy describes how ChatApp collects, uses, and protects your personal information when using our service.
                            We strive to ensure maximum protection of your data and adhere to the highest security standards.
                        </p>
                    </section>

                    <section class="mb-4">
                        <h5 class="fw-bold"><i class="fas fa-database me-2 text-secondary"></i>What Data We Collect</h5>
                        <p>
                            When using our chat application, we collect and process the following types of information:
                        </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-transparent">
                                <i class="fas fa-user-tag text-secondary me-2"></i>
                                <strong>Username</strong> - the name you provide when sending messages in the chat
                            </li>
                            <li class="list-group-item bg-transparent">
                                <i class="fas fa-comment-dots text-secondary me-2"></i>
                                <strong>Message Content</strong> - the text of messages you send through the chat
                            </li>
                            <li class="list-group-item bg-transparent">
                                <i class="fas fa-smile text-secondary me-2"></i>
                                <strong>Sentiment Analysis</strong> - our service analyzes the emotional tone of messages using Azure Text Analytics
                            </li>
                            <li class="list-group-item bg-transparent">
                                <i class="fas fa-clock text-secondary me-2"></i>
                                <strong>Message Timestamp</strong> - the date and time when your messages are sent
                            </li>
                        </ul>
                    </section>

                    <section class="mb-4">
                        <h5 class="fw-bold"><i class="fas fa-cogs me-2 text-secondary"></i>How We Use Your Data</h5>
                        <p>
                            The collected data is used for:
                        </p>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-secondary">
                                    <div class="card-body">
                                        <h6 class="card-title"><i class="fas fa-comments text-secondary me-2"></i>Chat Functionality</h6>
                                        <p class="card-text">Ensuring normal operation of the chat and delivering messages to other users</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-secondary">
                                    <div class="card-body">
                                        <h6 class="card-title"><i class="fas fa-brain text-secondary me-2"></i>Sentiment Analysis</h6>
                                        <p class="card-text">Determining the emotional tone of messages to improve communication experience</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-secondary">
                                    <div class="card-body">
                                        <h6 class="card-title"><i class="fas fa-chart-line text-secondary me-2"></i>Usage Analytics</h6>
                                        <p class="card-text">Analyzing activity to improve functionality and performance of the application</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-secondary">
                                    <div class="card-body">
                                        <h6 class="card-title"><i class="fas fa-bug text-secondary me-2"></i>Error Diagnostics</h6>
                                        <p class="card-text">Detecting and resolving technical issues and ensuring service stability</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <section class="mb-4">
                        <h5 class="fw-bold"><i class="fas fa-lock me-2 text-secondary"></i>Security of Your Data</h5>
                        <p>
                            We implement the following measures to protect your data:
                        </p>
                        <ul>
                            <li><i class="fas fa-server text-secondary me-2"></i>Storing data on secure Microsoft Azure servers</li>
                            <li><i class="fas fa-key text-secondary me-2"></i>Using Azure Key Vault to protect keys and secrets</li>
                            <li><i class="fas fa-shield-alt text-secondary me-2"></i>Regular security checks and system updates</li>
                            <li><i class="fas fa-user-shield text-secondary me-2"></i>Limited access to personal data for authorized personnel only</li>
                        </ul>
                    </section>

                    <section class="mb-4">
                        <h5 class="fw-bold"><i class="fas fa-cookie-bite me-2 text-secondary"></i>Cookies</h5>
                        <p>
                            Our site may use cookies to improve your experience. These are small text files stored on your device to remember your preferences and other data about your visit.
                        </p>
                    </section>

                    <section class="mb-4">
                        <h5 class="fw-bold"><i class="fas fa-envelope me-2 text-secondary"></i>Contact Us</h5>
                        <p>
                            If you have questions about our privacy policy or would like to exercise your rights regarding your data, please contact us at:
                        </p>
                        <div class="alert alert-secondary">
                            <a href="mailto:pzkpmfv@gmail.com" class="text-decoration-none">
                                <i class="fas fa-at me-2"></i>pzkpmfv@gmail.com
                            </a>
                        </div>
                    </section>

                    <div class="alert alert-light">
                        <div class="d-flex">
                            <i class="fas fa-info-circle fs-4 me-3 mt-1 text-secondary"></i>
                            <div>
                                <h6 class="fw-bold">Policy Updates</h6>
                                <p class="mb-0">
                                    This privacy policy was last updated on @DateTime.Now.ToString("MM/dd/yyyy"). We reserve the right to make changes to this policy, so we recommend checking this page periodically.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
